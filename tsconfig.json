{
	"ts-node": {
		"allowJs": true,
		"transpileOnly": true,
	},
	"compilerOptions": {
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"baseUrl": "./",
		"types": [
			"core-js",
			"es6-collections",
			"node",
			"vue"
		],
		"paths": {
			"@/*": [
				"src/*"
			],
		},
		"lib": [
			"esnext",
			"es5",
			"es6",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"shims-vue.d.ts",
		"shims-vuex.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
